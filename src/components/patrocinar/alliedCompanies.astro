			<div class="w-[48%] lg:w-[18%] h-fit flex items-center justify-center">
				<Image src={andi} alt="Unete a nuestra comunidad" class="" />
			</div>
			<div class="w-[48%] lg:w-[18%] h-fit flex items-center justify-center">
				<Image src={camaraComercio} alt="Unete a nuestra comunidad" class="" />
			</div>
			<div class="w-[48%] lg:w-[18%] h-fit flex items-center justify-center">
				<Image src={fedesoft} alt="Unete a nuestra comunidad" class="" />
			</div>
		</div>
	</div>
