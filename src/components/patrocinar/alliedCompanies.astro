---
import { Image } from 'astro:assets';
import companySolvo from '~/assets/img/companies/Solvo.svg';
import vensura from '~/assets/img/companies/patrocina/VENSURA.svg';
import zonafranca from '~/assets/img/companies/patrocina/ZONA_FRANCA.svg';
import fenalco from '~/assets/img/companies/patrocina/fenalco.svg';
import marval from '~/assets/img/companies/patrocina/marval.svg';
import grupoSura from '~/assets/img/companies/patrocina/grupoSura.svg';
