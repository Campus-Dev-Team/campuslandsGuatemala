---

interface Props {
    whatsApp: string;
    tipo: "contacto" | "patrocinio" | "emplear" | "agendar" | "insripcion" | "chatear";
    iconName?: string;
    alt?:string;
    isOutline?: boolean;
    StylesAnchor?: string;
    StylesButton?: string;
}

const {whatsApp,tipo,iconName,alt,isOutline, StylesAnchor, StylesButton} = Astro.props;

const presets = {
    "contacto": ["Contactanos", "¡Hola!+Me+gustaría+conocer+más+sobre+Campuslands+y+sus+programas+de+formación.+¿Podrían+brindarme+información+detallada?"],
    
    "chatear": ["Chatea Con Nosotros", "¡Hola!+Me+interesa+ser+parte+de+Campuslands.+¿Podemos+programar+una+reunión+para+conocer+más+sobre+la+metodología?"],
    
    "patrocinio": ["Patrocina nuestros campers", "¡Saludos!+Represento+a+una+empresa+interesada+en+el+talento+de+Campuslands.+¿Podrían+informarme+sobre+el+programa+de+patrocinio+y+los+perfiles+disponibles?"],
    
    "emplear": ["Emplea nuestros Campers", "¡Hola!+Somos+una+empresa+en+búsqueda+de+talento+tech.+Nos+interesa+conocer+los+perfiles+de+sus+Campers+y+el+proceso+de+vinculación+laboral."],
    
    "agendar": ["Agenda tu visita", "¡Hola!+Me+gustaría+coordinar+una+visita+para+conocer+las+instalaciones+de+Campuslands+y+aprender+más+sobre+su+metodología+de+formación.+¿Qué+horarios+tienen+disponibles?"],
    
    "insripcion": ["Inscríbete ahora", "¡Hola!+Estoy+muy+interesado+en+formarme+como+desarrollador+en+Campuslands.+¿Podrían+informarme+sobre+el+proceso+de+inscripción,+requisitos+y+próximas+fechas+de+inicio?"]
}

const config = presets[tipo]

const presetStyle = isOutline ? "btn-outline" : "btn-primary";
---

<a href=`https://wa.me/${whatsApp}?text=${config[1]}` target="_blank" class={StylesAnchor}>
    <button class=`${presetStyle} p-7 lg:p-7 flex justify-center items-center gap-x-2 z-30 ${StylesButton}`>
        {config[0]}
        {iconName && <img src={`img/icons/${iconName}`} alt={alt} class="hidden lg:block"/>}
    </button>
</a>