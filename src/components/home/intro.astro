---
import { Image } from 'astro:assets';
import myImage from '~/assets/img/campers/campers-home-border-girl.png';
import ContactButton from '../common/ContactButton.astro';
---
<section class="principal max-w-7xl mx-auto from-8% relative py-6 lg:py-20  h-fit md:h-[740px]">
	<div class="heartbeat hidden items-center justify-center size-8 absolute left-[50%] -bottom-4 bg-white z-20 rounded-full bounce-top">
		<a href="#testimonials-section">
			<img src="src/assets/img/icons/arrow-left.svg" alt="flecha abajo">
		</a>
	</div>
	<div class="relative mx-auto flex flex-wrap justify-between h-fit w-full px-10 md:px-50 lg:px-0 max-w-7xl">
		<div class="my-auto w-full lg:w-5/12">
			<div class="items-center justify-center">
				<div class="flex w-full md:max-w-[350px] lg:w-[425px] lg:max-w-[425px] flex-col gap-y-8 relative">
					<img src="src/assets/img/cohete1.png" alt="rocket" width="122" height="122" class="absolute -right-28 hidden lg:block">
					<p class="gradient-text text-center lg:text-start f-40 leading-8 lg:leading-[60px] f-700"> Revolucionamos el talento tecnológico </p>
					<p class="text-center lg:text-start text-sm lg:text-base leading-6 text-white"> Campuslands forma a jóvenes con competencias únicas para su primer empleo de calidad en desarrollo de software. </p>
					<ContactButton whatsApp='+573177709345' tipo="contaco" iconName='happyFace.svg' alt='cara feliz'/>
				</div>
			</div>
		</div>
		<div class="my-auto">
			<div class="hidden lg:block">
				<Image
					src={myImage}
					alt="Grupo de campers 1"
					width={635}
					widths={[100, 500, 1024]}
					height={480}
					loading='lazy'
					sizes="(max-width: 635px) 100vw, 635px"
				/>
			</div>
			<div class="lg:hidden">
				<Image
					src={myImage}
					alt="Grupo de campers 2"
					width={300}
					height={300}
					loading='lazy'
					sizes="(max-width: 300px) 100vw, 100px"
				/>
			</div>
		</div>
	</div>
</section>

<style scoped>
.bg-students {
    position: absolute;
    bottom: 0px;
    right: 0px;
    width: 90%;
    max-width: 90%;
    max-height: 70%;
}

.principal {
    /* background-image: url('src/assets/img/texxture.svg'); */
    background-position: 80% 0%;
    background-repeat: no-repeat;
    background-size: 75%;
}

