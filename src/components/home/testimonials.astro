<style scoped>

.countup {
    font-size: 40px;
    font-weight: bold;
    color: white;
    display: inline-block;
    position: relative;
    animation: count 10s forwards;
    /* 2s animation duration */
}

@keyframes count {
    0% {
        content: "0";
        /* Initial state */
    }

    50% {
        content: "50";
        /* Halfway state */
    }

    100% {
        content: "100";
        /* Final state */
    }
}
</style>