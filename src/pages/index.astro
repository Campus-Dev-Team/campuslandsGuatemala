---
import LayoutNavbar from "../layouts/LayoutNavbar.astro";
import Card from "../components/Card.astro";
import NavBar from "../components/navBar.vue";
// import Testimonials from "../components/testimonials.vue";
import Location from "../components/location.vue";
import Faq from "../components/faq.vue";
import ContactUs from "../components/contactUs.vue";
import "~/styles/index.css";

import { Image } from 'astro:assets';
import myImage from '~/assets/img/campers/campers-home-final.png';
import joinOurComunity from '~/assets/img/card.png';

import Intro from "../components/home/intro.astro";
import Testimonials from "../components/home/testimonials.vue";
// import Testimonials from "../components/home/testimonials.astro";
---
<LayoutNavbar title="Campuslands">
	<Intro />
	<div class="bg-gradient-to-r from-[#2F10A2] from-5% via-[#130640] via-28% to-[#260D84] to-62%">
		<Testimonials id="testimonials-section" client:load />
		<div class="max-w-[1130px] mx-auto py-10">
			<Image
				src={joinOurComunity}
				alt="Unete a nuestra comunidad"
			/>
		</div>
	</div>
</LayoutNavbar>

