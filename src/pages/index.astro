---
import LayoutNavbar from "../layouts/LayoutNavbar.astro";
import "~/styles/index.css";

import Intro from "../components/home/intro.astro";
import Testimonials from "../components/home/testimonials.astro";
import AlliedCompanies from "../components/alliedCompanies.astro";
import BuildingFuture from "../components/buildingFuture.astro";
import PotentialDevelopment from "../components/potentialDevelopment.astro";
import VisitUs from "../components/visitUs.astro";
import Faq from "../components/home/faq.vue"
---
<LayoutNavbar title="Campuslands">
	<div class="relative">
		<div id="go-up" class="flex justify-center align-middle bg-primary rounded-full size-10 fixed right-10 bottom-[5%] cursor-pointer z-50">
			<img src="/src/assets/img/icons/arrow-up.svg" alt="" width="25">
		</div>
		<Intro />
		<div class="">
			<AlliedCompanies />
			<BuildingFuture />
			<Testimonials id="testimonials-section" />
			<PotentialDevelopment />
			<div class="w-full max-w-7xl mx-auto py-10 lg:my-20 lg:py-10 px-4">
				<a href="https://wa.me/+573160522555?text=Hola,+estoy+interesado+en+unirme+a+la+comunidad+de+Campuslands.+¿Cómo+puedo+hacerlo?" target="_blank">
					<img src="src/assets/img/card.png" alt="" class="w-full hidden lg:block">
					<img src="src/assets/img/card.png" alt="" class="w-full lg:hidden">
				</a>
			</div>
			<VisitUs />
			<Faq client:load />
		</div>
	</div>
</LayoutNavbar>

<script>
function goUp() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
}

document.querySelector("#go-up").addEventListener("click", goUp);

